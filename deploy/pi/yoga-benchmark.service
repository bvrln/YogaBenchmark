[Unit]
Description=Yoga Benchmark Web App
After=network.target

[Service]
Type=simple
User=bram
WorkingDirectory=/home/bram/yoga-price-benchmark
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/bram/yoga-price-benchmark/.venv/bin/uvicorn server.app:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
